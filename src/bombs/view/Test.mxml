<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" right="0" xmlns:model="bombs.model.*"
	visible="{!playing}"
	>
	
	<mx:Metadata>
		[Event(name="join",type="flash.events.Event")]	
		[Event(name="clear",type="flash.events.Event")]	
		[Event(name="play",type="flash.events.Event")]	
	</mx:Metadata>
		
	<mx:Boolean id="playing"/>
		
	<mx:TextInput id="nameField"/>
	<model:Character id="sample" name="{nameField.text}"/>

	<mx:Button label="Join" click="dispatchEvent(new Event('join'))"/>
	<mx:Button label="removeAll" click="dispatchEvent(new Event('clear'))"/>
	<mx:Button label="startPlaying" click="dispatchEvent(new Event('play'))"/>
</mx:Panel>
