<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	
	<mx:Script>
		<![CDATA[
			import bombs.view.render.CharacterRenderer;
			import bombs.model.Character;
			import mx.collections.IList;
			
			private var renderers:Dictionary = new Dictionary(true);
			
			public function addCharacter(character:Character):void
			{
				var renderer:CharacterRenderer = createRenderer(character);
				renderers[character.name] = renderer;
				addChild(renderer);
			}
			
			public function removeCharacter(character:Character):void
			{
				var renderer:CharacterRenderer = renderers[character.name];
				removeChild(renderer);				
				delete renderers[character.name];
			}
			
			private function createRenderer(character:Character):CharacterRenderer
			{
				var render:CharacterRenderer = new CharacterRenderer();
					render.data = character;
					
				return render;
			}
		]]>
	</mx:Script>
	
</mx:Canvas>
